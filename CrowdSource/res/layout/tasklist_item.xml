<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/taskitem_textview"
        android:layout_width="250dp"
        android:layout_height="46dp"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/tasklist_task_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/taskitem_textview"
        android:layout_marginLeft="23dp"
        android:layout_marginBottom="7dp"
        android:layout_toRightOf="@+id/taskitem_textview"
        android:contentDescription="@string/tasktype_desc"
        android:src="@drawable/ic_action_search" />

</RelativeLayout>