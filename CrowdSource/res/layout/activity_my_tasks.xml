<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/my_private_tasks_text"
        android:text="@string/myPrivateTasksText"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="@android:color/darker_gray" />

    <ListView
        android:id="@+id/privatetasklist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:listSelector="@android:color/transparent"
        android:transcriptMode="alwaysScroll" >

    </ListView>
    
    <TextView
        android:id="@+id/my_public_tasks_text"
        android:text="@string/myPublicTasksText"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="@android:color/darker_gray" />

    <ListView
        android:id="@+id/publictasklist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:listSelector="@android:color/transparent"
        android:transcriptMode="alwaysScroll" >
    </ListView>

</LinearLayout>
